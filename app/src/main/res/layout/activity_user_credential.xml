<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UserCredentialActivity">


    <ImageView
        android:id="@+id/credential_app_logo"
        android:layout_width="360dp"
        android:layout_height="252dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:src="@drawable/home"
        android:textAlignment="center" />

    <Button
        android:id="@+id/credential_join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/credential_app_logo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:padding="20dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/purple_700"
        android:textSize="15sp" />

    <Button
        android:id="@+id/credential_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="Already have account?Login in"
        android:textColor="@color/white"
        android:layout_below="@id/credential_join_btn"/>




</RelativeLayout>